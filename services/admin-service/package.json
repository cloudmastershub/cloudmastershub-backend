{
  "name": "@cloudmastershub/admin-service",
  "version": "1.0.0",
  "description": "CloudMastersHub Admin Service - Platform administration and management",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "migrate": "node scripts/migrate.js up",
    "migrate:status": "node scripts/migrate.js status",
    "db:setup": "npm run migrate"
  },
  "dependencies": {
    "@cloudmastershub/middleware": "file:../../shared/middleware",
    "@cloudmastershub/types": "file:../../shared/types",
    "@cloudmastershub/utils": "file:../../shared/utils",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pdfkit": "^0.17.4",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  }
}
