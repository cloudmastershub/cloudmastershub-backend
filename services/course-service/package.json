{
  "name": "@cloudmastershub/course-service",
  "version": "1.0.0",
  "description": "CloudMastersHub Course Management Service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "migrate": "migrate-mongo up",
    "migrate:down": "migrate-mongo down",
    "migrate:status": "migrate-mongo status",
    "migrate:create": "migrate-mongo create",
    "migrate:slugs": "ts-node scripts/add-slugs-migration.ts"
  },
  "dependencies": {
    "@cloudmastershub/middleware": "file:../../shared/middleware",
    "@cloudmastershub/types": "file:../../shared/types",
    "@cloudmastershub/utils": "file:../../shared/utils",
    "aws-sdk": "^2.1542.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.3",
    "redis": "^4.6.12",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.0",
    "jest": "^29.7.0",
    "migrate-mongo": "^11.0.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  }
}
